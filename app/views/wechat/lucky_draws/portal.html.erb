<div class="container">
  <div class="cj-box">
    <h2><%= @ld.title %>现场抽奖，赢取<span style="color:red;"><%= @prize.name %></span></h2>
    <div class="cj-users">
      <p class="subtitle">抽奖人员如下</p>
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-md-2 col-sm-3 col-xs-4">
          <div class="thumbnail">
            <%= image_tag user.auth_profile.headimgurl, class: 'image-circle' %>
            <h3><%= user.auth_profile.nickname %></h3>
          </div>
          
        </div>
        <% end %>
      </div>
    </div>
    <div class="cj-progress" id="cj-progress" style="display:none;">
      <p class="subtitle">抽奖进行中...</p>
      <div class="user-icons">
        <% @users.each do |user| %>
          <%= image_tag user.auth_profile.headimgurl, class: 'image-circle' %>
        <% end %>
      </div>
    </div>
    <p class="cj-buttons"><button type="button" class="btn btn-lg btn-primary" onclick="">开始抽奖</button></p>
  </div>
</div>